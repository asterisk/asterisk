macro check-psd-exists ( ext ) {
	Realtime(psd,extension,${ext},psd_);
	if ("${psd_extension}foo" = "foo") {
		System(/usr/local/bin/create_psd.sh ${ext});
	} else
		NoOp(PSD set for ${ext});
	return;
};

