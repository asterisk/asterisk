			Hangup;
		} else {
			SayDigits("${ct_calltrace}");
			Set(TIMEOUT(digit)=3);
			Set(TIMEOUT(response)=7);
			Background(loligo/to-call-this-number);
			Background(press-1);
			Background(loligo/silence/5);
		};
	};

	1 => goto local1|${ct_calltrace}|1;

	i => {
		Playback(vm-goodbye);
		Hangup;
	};

	t => {
		Playback(vm-goodbye);
		Hangup;
	};
};

