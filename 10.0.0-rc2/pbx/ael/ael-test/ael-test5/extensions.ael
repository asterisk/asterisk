context app-calltrace-perform {
	s => {
		Answer;
		Wait(1);
		Background(info-about-last-call);
		Background(telephone-number);
		RealTime(call_info|exten|${CALLERIDNUM:5}|ct_);
		if ("${ct_calltrace}foo" = "foo") {
